{
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "preserve",
        "strict": true,
        "skipLibCheck": true,
        "noErrorTruncation": true,
        "moduleResolution": "node",
        "rootDir": "src",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "outDir": "./dist/"
    },
    "include": ["src/**/*.d.ts", "src/**/*.ts"]
}
